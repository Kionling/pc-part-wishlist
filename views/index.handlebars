
<nav>
    <div class="nav-wrapper #f50057 pink accent-3" style="font-weight: 700;">
      <a href="/" class="brand-logo center">Pc part wishlist</a>
      
    </div>
  </nav>



<div class="container center">
<h1 style="font-weight: 700;" class="white-text">Pc parts Wishlist</h1>
</div>

<div class="row center">
    <div class="col s6">
<h3 style="font-weight: 700;" class="white-text">Current Build Wishlist</h3>
 <ul class="white-text" style="font-size: x-large;">
  {{#each pcparts}}
    {{#unless pcpart}}
      {{> build/xBuild pcstatus=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col s6">
<h3 style="font-weight: 700;" class="white-text">Items Purchased</h3>

<ul style="font-size: x-large;" class="white-text">
  {{#each pcparts}}
    {{#if pcpart}}
      {{> build/xBuild pcstatus=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div> 


<div class="container center">
<h3 style="font-weight: 700;" class="white-text">Add a new PC part</h3>
<form class="create-form">

    <div class="row">
        <div class="col s6">
  <div class="form-group">
    <label for="pa" class="white-text" style="font-weight: 900;"> Add New PC part:</label>
    <input class="white-text" type="text" id="pa" name="name">
  </div>
        </div>
    

  <div class="form-group">
   <p>
      <label>
        <input name="pcpart" type="radio"  value="1"checked />
        <span class="white-text" style="font-weight: 500;">Wishlist</span>
      </label>
    </p>
    <p>
      <label>
        <input name="pcpart" type="radio" value="0" checked />
        <span class="white-text" style="font-weight: 500;">Purchased</span>
      </label>
    </p>
  </div>
  </div>

  <button class="btn waves-effect waves-light #e91e63 pink" type="submit">Add PC Part</button>
</form> 
</div>
