    <div class="nav-wrapper #ba68c8 purple lighten-2">
      <a href="/" class="brand-logo center ">Pc part wishlist</a>
      
    </div>
  </nav>



<div class="container center">
<h1 style="font-weight: 700;">Pc parts Wishlist</h1>
</div>

<div class="row center">
    <div class="col s6">
<h3 style="font-weight: 700;">Current Build Wishlist</h3>
 <ul>
  {{#each pcparts}}
    {{#unless pcpart}}
      {{> build/xBuild pcstatus=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>

<div class="col s6">
<h3 style="font-weight: 700;">Items Purchased</h3>

<ul>
  {{#each pcparts}}
    {{#if pcpart}}
      {{> build/xBuild pcstatus=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div> 

<h3 style="font-weight: 700;">Add a new PC part</h3>
<form class="create-form">

  <div class="form-group">
    <label for="pa"> Add New PC part:</label>
    <input type="text" id="pa" name="name">
  </div>

  <div class="form-group">
   <p>
      <label>
        <input name="pcpart" type="radio"  value="1"checked />
        <span>Wishlist</span>
      </label>
    </p>
    <p>
      <label>
        <input name="pcpart" type="radio" value="0" checked />
        <span>Purchased</span>
      </label>
    </p>
  </div>

  <button class="btn waves-effect waves-light" type="submit">Add PC Part</button>
</form> 
